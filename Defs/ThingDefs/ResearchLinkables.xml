<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="HobbesLink_Base">
    <defName>HobbesLink_PersonalComputer</defName>
    <label>personal computer</label>
    <description>A personal computer (PC) is a general-purpose computer designed for individual use, which typically includes a central processing unit (CPU), memory, storage, and various peripheral devices that are all housed in a single unit or tower case.</description>
    <graphicData>
      <texPath>Things/Buildings/Research/10_PC/PC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,3)</drawSize>
    </graphicData>
    <statBases>
      <WorkToBuild>1200</WorkToBuild>
      <Mass>20</Mass>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>50</Steel>
      <Plasteel>40</Plasteel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <researchPrerequisites>
      <li>Machining</li>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.15</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>4</maxSimultaneous>
        <maxDistance>1</maxDistance>
      </li>
    </comps>
  </ThingDef>

